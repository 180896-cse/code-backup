REM
CLS
INPUT "ENTER SIZE"; R
DIM A(R, R)
FOR I = 1 TO R
FOR J = 1 TO R
INPUT "ENTER ELEMENT"; A(I, J)
NEXT J
NEXT I
MAX1 = A(1, 1)
MAX2 = A(1, 1)
FOR I = 1 TO R
IF A(I, I) > MAX1 THEN
MAX1 = A(I, I)
END IF
NEXT I
K = R
FOR I = 1 TO R
IF MAX2 < A(I, K) THEN
MAX2 = A(I, K)
END IF
K = K - 1
NEXT I
PRINT "HIGHEST ELEMENT FROM LEFT DIAGONAL="; MAX1
PRINT "HIGHEST ELEMENT FROM RIGHT DIAGONAL="; MAX2
FOR I = 1 TO R
FOR J = 1 TO R
PRINT A(I, J); " ";
NEXT J
PRINT
NEXT I
END







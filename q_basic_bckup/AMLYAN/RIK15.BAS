REM
CLS : K = 0
INPUT "ENTER ARRAY SIZE="; S
DIM A(S)
FOR I = 1 TO S STEP 1
INPUT "ENTER ARRAY ELEMENT="; A(I)
NEXT I
FOR I = 1 TO S STEP 1
FOR J = 1 TO S - K - 1 STEP 1
IF A(J) < A(J + 1) THEN
SWAP A(J), A(J + 1)
END IF
NEXT J
K = K + 1
NEXT I
PRINT "RE-ARRANGED ARRAY:-"
FOR I = 1 TO S STEP 1
PRINT A(I);
NEXT I
END


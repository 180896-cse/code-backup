CLS
INPUT "ENTER NO.OF ROWS"; S
INPUT "ENTER THE NO.OF COLUMNS"; T
DIM A(S, T)
FOR I = 1 TO S STEP 1
FOR J = 1 TO T STEP 1
INPUT "ENTER ARRAY ELEMENT:-"; A(I, J)
NEXT J
NEXT I
PRINT "MATRIX IN ROW ORDER:--"
FOR I = 1 TO S
FOR J = 1 TO T
PRINT A(I, J);
NEXT J
PRINT
NEXT I
PRINT "MATRIX IN COLUMN ORDER:--"
FOR I = 1 TO T
FOR J = 1 TO S
PRINT A(J, I);
NEXT J
PRINT
NEXT I
END




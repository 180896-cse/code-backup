REM
CLS
INPUT "ENTER ARRAY SIZE:-"; R
DIM A(R, R)
FOR I = 1 TO R
FOR J = 1 TO R
INPUT "ENTER ELEMENT"; A(I, J)
NEXT J
NEXT I
PRINT "ORIGINAL MATRIX:-"
FOR I = 1 TO R
FOR J = 1 TO R
PRINT A(I, J); " ";
NEXT J
PRINT
NEXT I
PRINT "ABOVE:-"
FOR I = 1 TO R
FOR J = I + 1 TO R
PRINT A(I, J); " ";
NEXT J
NEXT I
PRINT
PRINT "BELOW:-"
FOR I = 1 TO R
FOR J = 1 TO I - 1
PRINT A(I, J); " ";
NEXT J
NEXT I
END






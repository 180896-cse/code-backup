REM
CLS
INPUT "ENTER ARRAY SIZE "; S
DIM A(S)
FOR I = 1 TO S
INPUT "ENTER ARRAY ELEMENT"; A(I)
NEXT I
MAX = A(1)
MIN = A(1)
REM PRINT MAX
T = 1
K = 1
FOR I = 2 TO S
IF A(I) > MAX THEN
MAX = A(I)
T = I
ELSE
IF A(I) < MIN THEN
MIN = A(I)
K = I
END IF
END IF
NEXT I
REM PRINT K
REM PRINT T
SWAP A(K), A(T)
FOR I = 1 TO S
PRINT A(I)
NEXT I
REM PRINT "SWAPPED POSITIONS"; A(T), A(K)
END





import java.io.*;
public class add1
{
    public static void main()throws IOException
    {
        BufferedReader br=new BufferedReader(new InputStreamReader(System.in));
        int a,b,c,d;
        System.out.println("Enter data:");
        a=Integer.parseInt(br.readLine());
        c=a+b;
        d=(a+b)/2;
        System.out.println(c+","+d);
    }
}

        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        

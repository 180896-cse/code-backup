class pat
{
    public static void main(int n)
    {
        for(int i=1;i<=n;i++)
        {
            for(int j=1;j<=i;j++)
            {
                if(i==j)
                {
                    for(int k=1;k<=(i-1);k++)
                    System.out.print("*");
                }
                else
                System.out.print("*");
            }
            System.out.println();
        }

    }
}